{block name="self"}
{literal}
<script>
	$(function(){
		
    	var _index=0,is_lun=false,review_ul=$('.js-review-list'),_len=$('.js-review-list li').length/2,list_w=780;		//轮播当前i
    	
    	$('.js-left-btn').on('click',function(){
    		if(is_lun==true){
    			return;
    		}
    		is_lun=true;		//正在轮播
    		_index--;
    		if(_index<0){
    			_index=_len-1;
    			review_ul.stop().css({
	    			"margin-left":_len*-1*list_w+"px"
	    		})
    		}
    		
    		review_ul.stop().animate({
    			"margin-left":_index*-1*list_w+"px"
    		},400,function(){
    			is_lun=false;
    		});
    		
    	})
    	
    	$('.js-right-btn').on('click',function(){
    		if(is_lun==true){
    			return;
    		}
    		is_lun=true;
    		_index++;
    		if(_index>_len){
    			_index=1;
    			review_ul.stop().css({
	    			"margin-left":"0px"
	    		})
    		}
    		
    		review_ul.stop().animate({
    			"margin-left":_index*-1*list_w+"px"
    		},400,function(){
    			is_lun=false;
    		});
    	})
    })
</script>
{/literal}
