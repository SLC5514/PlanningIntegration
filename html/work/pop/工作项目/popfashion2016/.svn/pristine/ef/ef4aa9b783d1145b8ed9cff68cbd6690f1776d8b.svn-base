<script type="text/javascript">

    //绑定click事件
    $('#list').find('li').click(function(){
        var count = $(this).html();
        $('#count').val(count);
        $('#list').toggle();
        $.ajax({
            type: "POST",
            url:  "/member/",
            data: "count="+count,
            dataType: 'json',
            success: function(msg){
                if(msg.success == 1){
                    $('#nowscore').html(msg.info.iIntegraNumber);
                }else{
                    alert('找不到相关信息');
                }
            }
        });
    });

    //重置密码
    $('body').on( 'click','.resetPassword',function(){
        var count = $(this).parents("tr").find(".phone").text();
        $.ajax({
            type: "POST",
            url:  "/member/reset/",
            data: "phone="+count,
            dataType: 'json',
            success: function(msg){
                if(msg.success == 1){
                    $('#qrcountcz').html(count);
                    $('#qrpwdcz').html(msg.pwd);
                    $('.bangding').show();
                    $('#czmm').show();
                    $('#suc').show();
                }else{
                    alert('重置密码失败');
                }
            }
        });
    });

    //分配积分
    $('#Send').click(function(){
        var count = $('#count').val();
        var sendScore = $('#sendScore').val();
        var code = $('#spafppwd').val();
        if(count==''){
            alert('请选择设计师专属账号');
            return;
        }
        if(!sendScore){
            alert('请输入分配的积分');
            return;
        }
        if(!code){
            alert('请输入验证码');
            return;
        }
        $.ajax({
            type: "POST",
            url:  "/member/allotintegral/",
            data: "count="+count+"&score="+sendScore+'&code='+code,
            dataType: 'json',
            success: function(msg){
                alert(msg.msg);
                if(msg.success==1){
                    window.location.reload();
                }
            }
        });
    });

    //解除关联
    $('#querenjc').click(function(){
        var count = $('#hongcount').html();
        var code = $('#spajcpwd').val();
        if(!count){
            alert('请选择设计师专属账号');
            return;
        }
        if(!code){
            alert('请输入验证码');
            return;
        }
        $.ajax({
            type: "POST",
            url:  "/member/unassociate/",
            data: "count="+count+'&code='+code,
            dataType: 'json',
            success: function(msg){
                alert(msg.msg);
                if(msg.success==1){
                    window.location.reload();
                }
            }
        });
    });

    //添加子账号
    $('#querenbd').click(function(){
        var sur = $('#sur').val();
        var name = $('#name').val();
        var count = $('#bdcount').val();
        var code = $('#spabdpwd').val();
        if(!$.trim(sur)) {
            layer.alert('请填写姓');
            return;
        }
        if(!$.trim(name)) {
            layer.alert('请填写名');
            return;
        }
        if(!count){
            layer.alert('请填写需要添加的设计师专属账号');
            return;
        }
        if(!code){
            layer.alert('请输入验证码');
            return;
        }
        $.ajax({
            type: "POST",
            url:  "/member/addchild/",
            data: "count="+count+'&code='+code+'&sur='+sur+'&name='+name,
            dataType: 'json',
            success: function(msg){
                if(msg.success==1){
                    $('#qrcount').html(msg.count);
                    $('#qrpwd').html(msg.pwd);
                    $('.bangding .bdzh .xinxi').hide();
                    $('.bangding .bdzh .suc').show();
                    return;
                }else{
                    alert(msg.msg);
                    return;

                }
            }
        });
    });

    var wait=90;
    $('.huoqu').click(function(){
        var count = $('#bdcount').val();
        if(!count){
            alert('请填写需要添加的设计师专属账号');
            return;
        }
        $.ajax({
            type: "POST",
            url:  "/member/sendCode/",
            data: "phone="+count,
            dataType: 'json',
            success: function(msg){
                if(msg.success == 1){
                    this.disabled = false;
                    time();
                } else{
                    alert(msg.msg);
                }
                return;
            }
        });
    });

    function time() {
        if (wait == 0) {
            $('.huoqu').removeAttr("disabled");
            $('.huoqu').val("获取验证码");
            wait = 90;
        } else {
            $('.huoqu').attr("disabled", true);
            $('.huoqu').val(wait + "s");
            wait--;
            setTimeout(function() {
                        time()
                    },
                    1000)
        }
    }

</script>


<script type="text/javascript">
	//搜索
   $("#search_but").on( "click",function(){
		var search = $.trim($("#search_val").val());
		if( search =='请输入姓名或手机号'){
			search='';
		}
		search_click( 'key',search );
    });
	
	//搜索(enter)
	$('#search_val').on('keypress',function(event){
		var search= $.trim($(this).val());
		if( search =='请输入姓名或手机号'){
			search='';
		}
		if(event.keyCode == "13")    
		{
			search_click( 'key',search );
		}
	});
	function search_click(_key,_val) {
		var $link = $("#link");
		var _param = $link.data('param');
		var search = $link.data('search');
		var _url = $link.data('url');
		// 页码如果存在则将页码去掉
		if (_param.indexOf('-page_') !== -1) {
			var reg = RegExp('-page_([^-]*)', 'gi');
			_param = _param.replace(reg,'');
		}
		else if (_param.indexOf('page_') !== -1) {
			var reg = RegExp('page_([^-]*)', 'gi');
			_param = _param.replace(reg,'');
		}
			
		// 关键字条件
		if(_key == 'key') {
			_val = encodeURIComponent(encodeURIComponent(_val));
			if ($.trim(_param) != '') {
				// 不存在则增加
				if (_param.indexOf('?key=') === -1) {
					_param = _param.replace(/\/$/,'')+'/?key='+_val;
				}
				// 否则替换
				else {
					_param = _param.replace(/\/$/,'').replace('/?key=([^&]*)/gi','/?key='+_val);
				}
			} else {
				_param = '?key='+_val;
			}
		}
		// 非关键字条件
		else {
			if ($.trim(_param) != '') {
				// 不存在则增加
				if (_param.indexOf(_key+'_') === -1) {
					_param += '-'+_key+'_'+_val;
				}
				// 否则替换
				else {
					var reg = new RegExp(_key+'_'+'([^-]*)', 'gi');
					_param = _param.replace(reg,_key+'_'+_val);
				}
			}
			else {
				_param = _key+'_'+_val;
			}
			_param = search ? _param.replace(/\/$/,'')+'/'+search : _param+'/';
		}	
		location.href = _url+_param.replace(/^\//,'')+'#anchor';	
	}
	var Itext=$("body");
		var defaultValue = '请输入姓名或手机号';
		Itext.on('blur', '#search_val', function(){
			$this = $(this);
			var _val = $.trim($this.val());
			if(_val == ''){
				$this.val(defaultValue);
			}
		}).on('focus', '#search_val', function(){
			var $this = $(this);
			var txt = $this.val();
			if(txt == defaultValue){
				$this.val('');
			}
		})    
    //刷新图片验证码
    function GetCheckCode(obj){
        obj.src = "/member/imgcaptcha/?temp="+Math.random();
    }

    //立即购买
    (function($){
        $.BuyIntegral = function ( args ) {
            var $this = this;
            this.buyIntegralNum = $( args.buyIntegralNum );
            this.payMoney = $( args.payMoney );
            this.reduceIntegral = $( args.reduceIntegral );
            this.increaseIntegral = $( args.increaseIntegral );

            var fIntegralNum = function(){
                //购买积分数
                var buyIntegralNum = parseInt( $( args.buyIntegralNum ).val() );
                if( isNaN( buyIntegralNum ) ) {
                    buyIntegralNum = 0;
                }
                else {
                    if( buyIntegralNum > 99999 ) {
                        buyIntegralNum = 99999;
                    }
                }
                return buyIntegralNum;
            };
            var fPayMoney = function( integralnumber ) {
                //支付金额 10积分 = 1元
                var payMoney;
                payMoney = parseFloat( integralnumber/10 );
                $( args.payMoney ).val( payMoney );
                $( args.payMoney+'_show' ).html( payMoney );
                return payMoney;
            };
            this.fBuyIntegralNum = function(){
                $this.buyIntegralNum.keyup(function(){
                    var buyIntegralNum = $(this).val();
                    buyIntegralNum = buyIntegralNum.replace( /\D+/g , '' );
                    $(this).val( buyIntegralNum );
                    fIntegralNum();
                    fPayMoney( buyIntegralNum );
                    return ;
                });
            };
            this.fReduceIntegral = function () {
                //减少积分
                return $this.reduceIntegral.click(function(){
                    var integralnumber = fIntegralNum();
                    if( integralnumber > 10 ) {
                        integralnumber = integralnumber-10;
                        $( args.buyIntegralNum ).val( integralnumber );
                        fPayMoney( integralnumber );
                    }
                    return ;
                });
            };
            this.fIncreaseIntegral = function () {
                //增加积分
                return $this.increaseIntegral.click(function(){
                    var integralnumber = fIntegralNum();
                    integralnumber = integralnumber+10;
                    if( integralnumber > 99999 ) {
                        integralnumber = 99999;
                    }
                    $( args.buyIntegralNum ).val( integralnumber );
                    fPayMoney( integralnumber );
                    return ;
                });
            };
        };
        var Buy = new $.BuyIntegral( { reduceIntegral : '#reduceIntegral', increaseIntegral : '#increaseIntegral', buyIntegralNum : '#buyIntegralNum', payMoney : '#paymoney' });
        Buy.fReduceIntegral();Buy.fIncreaseIntegral();Buy.fBuyIntegralNum();

        $('input[name=bank]').click(function(){
            var thisval = $.trim( $(this).val() );
            var cardType = $('input[name=cardType]');
            if( thisval == 'CEB-DEBIT' || thisval == 'CMBC' || thisval == 'COMM-DEBIT' ) {
                cardType.attr( 'disabled' ,true ).eq(0).attr( 'checked' , true );
            }
            else {
                cardType.attr( 'disabled' ,false );
            }
            return ;
        });
        //提交订单
        $('input#ConfirmPurchase').click(function(){
            var formObj = $("#orderPayForm");
            var buyIntegralNum = formObj.find("input[name=buyIntegralNum]").val();
            var options = {
                beforeSend : function(){
                    if( parseInt( buyIntegralNum ) <= 0 || buyIntegralNum == '' ) {
                        alert( '选择购买积分数' );return false;
                    }
                    return true;
                },
                type: 'POST',
                url : '/asyncRequest.php?'+Math.random(),
                async : false,	//同步执行
                dataType : 'json',
                data : { m : 'payOrder' },
                success: function( e ) {
                    if( e.status == '1' ) {
                        $('#ordernumber').val( e.info );
                        formObj.submit();//与上面顺序不可颠倒
                        $('#buyIntegralLayer').hide();
                        $('#confirmLayer').show();
                        return ;
                    }
                    else {
                        alert( e.info );return ;
                    }
                }
            };
            formObj.ajaxSubmit( options );
        });
        //立即支付
        $('#nowBuyIntegral').click(function(){
            $('#globalBuyIntegralLayer').show();
            $('#buyIntegralLayer').show();
        });
        //重新支付
        $('#resetBuyIntegral').click(function(){
            $('#globalBuyIntegralLayer').show();
            $('#buyIntegralLayer').show();
            $('#confirmLayer').hide();
        });
        //关闭弹层
        $( '#globalBuyIntegralLayer .close' ).click(function(){
            window.location.href=location.href;
        });
        $('a.paymethod').click(function(){
            var banks = $('#banks');
            $('input#paymethod' ).val( $.trim( $(this).attr( 'paymethod' ) ) );
            $(this).index() == 0 ? banks.slideDown() : banks.slideUp();
        });
    })(jQuery);
</script>
{/literal}
{/block}

