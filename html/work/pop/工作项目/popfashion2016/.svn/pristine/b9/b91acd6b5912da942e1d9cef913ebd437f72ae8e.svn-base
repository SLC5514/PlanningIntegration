{extends file="layout.html"}

{block name="selfcss"}
<link rel="stylesheet" type="text/css" href="{STATIC_URL2}/global/css/per.css?{STATIC_CHANGE_TIME}">
<link rel="stylesheet" type="text/css" href="{STATIC_URL2}/global/css/personal.css?{STATIC_CHANGE_TIME}">
{/block}

{block name="main"}
<div class="main">
    <div class="con_width">
    <!--个人中心 头部开始-->
    {$personalHeader}
    <!--个人中心 头部结束-->
    <div class="col-main clearfix">
        <!--个人中心 左侧菜单开始-->
        {$personalLeftMenu}
        <!--个人中心 左侧菜单结束-->
        <div class="col-con  fl">
            <!-- item-manage -->
            <div class="item-manage manage_user_child">
                <div class="hd"><span><i></i>账户积分管理</span></div>
                <div class="mainall">
                    <table width="100%" class="consume">
                        <tbody><tr>
                            <th width="20%">序号</th>
                            <th width="30%">积分明细</th>
                            <th width="20%">发生点数</th>
                            <th width="30%">发生时间</th>
                        </tr>
                        {foreach from=$integralInfo item=i key=k}
                        <tr>
                            <td>{($k+1)+($page-1)*$pageSize}</td>
                            <td>{$popIntegralConsumeTypes[$i.iService]}&nbsp;</td>
                            {if $i.iIntegralConsume gt 0}
                            <td style="color:#48830b;">+{$i.iIntegralConsume}点&nbsp;</td>
                            {else}
                            <td style="color:#ff0107;">{$i.iIntegralConsume}点&nbsp;</td>
                            {/if}
                            <td>{$i.dConsumeTime}&nbsp;</td>
                        </tr>
                        {/foreach}
                        </tbody>
                    </table>
                </div>
                <!--分页--页码开始-->
                {$pageHtml}
                <!--分页--页码结束-->
            </div>
            <!-- /item-manage -->
        </div>
    </div>
</div>

{/block}

{block name="other"}
{literal}

{/literal}
{/block}